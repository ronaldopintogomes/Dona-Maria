<BorderPane id="BorderPane" prefHeight="540.0" prefWidth="590.0" styleClass="background" stylesheets="@../recurso/css/padrao.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.102" fx:controller="br.com.donamaria.controle.CadastrarFuncionarioControle">
   <top>
      <VBox alignment="TOP_CENTER" prefHeight="74.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="labelTitulo" text="Cadastrar Funcionario" />
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </top>
   <center>
      <Pane prefHeight="425.0" prefWidth="590.0" BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="20.0" layoutY="38.0" prefHeight="405.0" prefWidth="544.0" spacing="10.0">
               <children>
                  <Label styleClass="labelDeCampos" text="Nome" />
                  <TextField fx:id="fieldNome" prefHeight="35.0" prefWidth="344.0">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <Label styleClass="labelDeCampos" text="Identidade" />
                  <TextField fx:id="fieldIdentidade" prefHeight="35.0" />
                  <Label styleClass="labelDeCampos" text="Senha" />
                  <PasswordField fx:id="fieldSenha" prefHeight="35.0">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </PasswordField>
                  <Label styleClass="labelDeCampos" text="Funcao" />
                  <ComboBox fx:id="comboFuncao" prefHeight="30.0" prefWidth="200.0" promptText="Selecione" />
                  <Separator prefWidth="200.0" />
                  <VBox alignment="BOTTOM_CENTER" prefHeight="69.0" prefWidth="544.0">
                     <children>
                        <Button fx:id="btCadastrar" mnemonicParsing="false" onAction="#cadastrar" prefWidth="200.0" styleClass="textoDosBotoes" text="Cadastrar" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </Pane>
   </center>
</BorderPane>
